<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10" style="-fx-padding: 20;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="transport.control.AjoutReclamationController">

    <Label style="-fx-font-size: 18; -fx-font-weight: bold;" text="Add a complaint" />

    <GridPane hgap="10" vgap="10">
        <padding>
            <Insets bottom="20" left="20" right="20" top="20" />
        </padding>

        <Label text="Type of complaint:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <ComboBox fx:id="typeReclamationCombo" GridPane.columnIndex="1" GridPane.rowIndex="0" />

        <Label text="Declarant:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <ComboBox fx:id="declarantCombo" GridPane.columnIndex="1" GridPane.rowIndex="1" />

        <Label text="Concerned station:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
        <TextField fx:id="stationConcerneeField" GridPane.columnIndex="1" GridPane.rowIndex="2" />

        <Label text="Description:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
        <TextArea fx:id="descriptionArea" GridPane.columnIndex="1" GridPane.rowIndex="3" />
      <columnConstraints>
         <ColumnConstraints />
         <ColumnConstraints />
      </columnConstraints>
      <rowConstraints>
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
      </rowConstraints>
    </GridPane>

    <HBox alignment="CENTER" spacing="10">
        <Button onAction="#ajouterReclamation" text="Add" />
        <Button onAction="#annuler" text="Cancel" />
    </HBox>
</VBox>
